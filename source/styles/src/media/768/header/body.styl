.header__body
  width: 100%;
  height: 150px;
  margin-top: -5%;
  display: grid;
  grid-template-rows: 1fr;
  grid-template-columns: 6fr;
  align-items: center;
  align-content: space-around ;

  .header__logo
    height: 100px;
    display: grid;
    grid-template-rows: 70px;
    grid-template-columns: 1fr 2fr;
    text-align: center;

    &-img
      margin-left: 100px;
      height: 75px;
      width: 120px;
    &-slogan
      display: grid;
      grid-template-rows: 0.5fr 0.5fr;
      grid-template-columns: 1fr ;
      align-items: stretch;
      padding-top: 20%;

  #hamburger
    width: 25px;
    height: 5px;
    display: block;
    position: absolute;
    top: 15%;
    left: 5%;
    cursor: pointer;

    span
      display: block;
      margin-top: 2px;
      width: 45px;
      height: 10px;
      border-radius: 5px;
      background-color: rgb(218, 70, 70);


  .header__nav
    opacity: 0;
    position: absolute;
    left: -50%;
    top: 25px;

    #close
      position: absolute;
      top: 40%;
      width: 10px;
      height: 10px;
      cursor: pointer ;
      span
        display: block;
        position: absolute;
        width: 10px;
        height: 2px;
        background-color: rgb(57, 44, 51)
        transform: rotate(45deg);
      span:last-child
        transform: rotate(-45deg);
    ul

      display: grid;
      grid-template-rows: 12fr;
      grid-template-columns: repeat(5, 0.5fr);
      grid-column-gap: 4px;
      list-style: none;
      text-transform: uppercase;
      transition:  all .5s;
      padding: 0 10%;
      font-size: 0.8em;
      li
        a
          color: rgb(85, 83, 89);
        &:hover
          a
            color: rgb(240, 232, 209);
            background-color: rgb(91, 74, 59);

  img
    width: 20px;
