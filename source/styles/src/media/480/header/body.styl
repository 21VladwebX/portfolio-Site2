.header__body
  width: 100%;
  height: 150px;
  margin-top: -5%;
  display: grid;
  grid-template-rows: 1fr;
  grid-template-columns: 6fr;
  align-items: center;
  align-content: space-around ;

  .header__logo
    height: 100px;
    display: grid;
    grid-template-rows: 70px;
    grid-template-columns: 1fr 2fr;
    text-align: center;

    &-img
      margin-left: 100px;
      height: 75px;
      width: 120px;
    &-slogan
      display: grid;
      grid-template-rows: 0.5fr 0.5fr;
      grid-template-columns: 1fr ;
      align-items: stretch;
      padding-top: 20%;



  .header__nav
    /******************!!!!!!!!!!!!!!!!!************/
    opacity: 0;
    ul
      display: grid;
      grid-template-rows: 12fr;
      grid-template-columns: repeat(5, 0.5fr);
      grid-column-gap: 4px;
      list-style: none;
      text-transform: uppercase;
      transition:  all .5s;
      padding: 0 10%;
      font-size: 0.8em;
      li
        a
          color: rgb(85, 83, 89);
        &:hover
          a
            color: rgb(240, 232, 209);
            background-color: rgb(91, 74, 59);

  img
    width: 20px;
