

.incut
  margin-top: 20%;
  width: 60%;
  height: 350px;
  background-color: red;

.btn
  width: 50%;
  height: 50px;
  margin-top: -120%;
  margin-left: 20%;
  text-transform: uppercase;
  color: rgb(152, 55, 55);
  border-radius:15px;

  &:hover
    box-shadow: 2px 3px 10px rgb(169, 219, 227);

.body__footer
  display: grid;
  grid-template-rows: 1fr;
  grid-template-columns: repeat(3, 300px);
  justify-content: space-between;
  background-color: rgb(79, 83, 85);

  &-item
    display: grid;
    grid-template-rows: 1fr;
    grid-template-columns: .2fr 1fr;
    grid-column-gap: 0px;
    justify-content: space-between;
    margin-left: 10px;

    img
      width: 100%;

  &-text
    margin: auto  25%;
    text-align: center;
    align-items: center;
